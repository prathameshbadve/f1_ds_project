
# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development
APP_NAME=f1-data-science
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Settings
DATABASE_URL=postgresql://username:password@localhost:5432/f1_data
DB_HOST=localhost
DB_PORT=5432
DB_NAME=f1_data
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_SCHEMA=public

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# FASTF1 API CONFIGURATION
# =============================================================================
# FastF1 Cache Directory (local path for caching F1 data)
FASTF1_CACHE_DIR=./data/raw/cache
FASTF1_CACHE_ENABLED=true
FASTF1_FORCE_RENEW=false

# API Rate Limiting
FASTF1_REQUEST_TIMEOUT=30
FASTF1_MAX_RETRIES=3
FASTF1_RETRY_DELAY=5

# =============================================================================
# DATA STORAGE CONFIGURATION
# =============================================================================
# Data Lake Paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
EXTERNAL_DATA_PATH=./data/external

# File Formats
DATA_FORMAT=parquet  # Options: parquet, csv, json
COMPRESSION=snappy   # Options: snappy, gzip, brotli

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================
# MLflow Settings
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=f1-data-science
MLFLOW_ARTIFACT_ROOT=./models/experiments

# Model Storage
MODEL_REGISTRY_PATH=./models/registry
TRAINED_MODELS_PATH=./models/trained

# Training Configuration
ML_RANDOM_STATE=42
ML_TEST_SIZE=0.2
ML_VALIDATION_SIZE=0.2
ML_CROSS_VALIDATION_FOLDS=5

# Hyperparameter Tuning
HYPEROPT_MAX_EVALS=100
OPTUNA_N_TRIALS=100
OPTUNA_TIMEOUT=3600  # 1 hour in seconds

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Authentication (if implemented)
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Logging Configuration
LOG_FORMAT=json  # Options: json, text
LOG_FILE_PATH=./monitoring/logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Prometheus Metrics
PROMETHEUS_PORT=8001
PROMETHEUS_ENABLED=true

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=true

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#data-science-alerts

# =============================================================================
# CLOUD STORAGE (Optional - for production)
# =============================================================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=f1-data-bucket
S3_DATA_PREFIX=raw-data/
S3_MODEL_PREFIX=models/

# Google Cloud Storage (alternative)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCS_BUCKET_NAME=f1-data-bucket
GCS_PROJECT_ID=your-project-id

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose Services
POSTGRES_DB=f1_data
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Jupyter Configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=your-jupyter-token

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# =============================================================================
# DATA PIPELINE CONFIGURATION
# =============================================================================
# Batch Processing Settings
BATCH_SIZE=1000
PARALLEL_WORKERS=4
CHUNK_SIZE=10000

# Schedule Configuration (for automated runs)
DAILY_INGESTION_TIME=02:00  # 2 AM UTC
WEEKLY_FULL_PROCESS_DAY=sunday
MONTHLY_MODEL_RETRAIN_DAY=1

# Data Validation Thresholds
DATA_QUALITY_THRESHOLD=0.95
MISSING_DATA_THRESHOLD=0.05
DRIFT_DETECTION_THRESHOLD=0.1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable Features
ENABLE_TELEMETRY_PROCESSING=true
ENABLE_WEATHER_DATA=true
ENABLE_HISTORICAL_DATA=true
ENABLE_LIVE_TIMING=false
ENABLE_DATA_DRIFT_DETECTION=true
ENABLE_MODEL_MONITORING=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Memory Management
MAX_MEMORY_USAGE=8GB
PANDAS_MEMORY_LIMIT=4GB
MULTIPROCESSING_ENABLED=true
MAX_CONCURRENT_REQUESTS=10

# Caching Settings
REDIS_CACHE_TTL=3600  # 1 hour
MEMORY_CACHE_SIZE=1000  # Number of items

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database (separate from main DB)
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_f1_data
TEST_DATA_SIZE=small  # Options: small, medium, large
MOCK_EXTERNAL_APIS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# API Security
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Data Encryption (if sensitive data is involved)
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPT_SENSITIVE_DATA=false

# =============================================================================
# CUSTOM F1-SPECIFIC SETTINGS
# =============================================================================
# F1 Season Configuration
DEFAULT_SEASON=2024
INCLUDE_TESTING_SESSIONS=true
INCLUDE_SPRINT_RACES=true

# Data Scope
EARLIEST_SEASON=2018  # FastF1 data availability starts from 2018
LATEST_SEASON=2024

# Session Types to Process
PROCESS_PRACTICE_SESSIONS=true
PROCESS_QUALIFYING_SESSIONS=true
PROCESS_RACE_SESSIONS=true
PROCESS_SPRINT_SESSIONS=true

# Telemetry Configuration
TELEMETRY_SAMPLING_RATE=10  # Hz
TELEMETRY_SMOOTHING_WINDOW=5  # seconds
INCLUDE_GPS_DATA=true
INCLUDE_SECTOR_DATA=true

# Driver and Team Configuration
INCLUDE_RESERVE_DRIVERS=false
TRACK_DRIVER_CHANGES=true
INCLUDE_TEAM_RADIO=false  # Not available in FastF1

# =============================================================================
# EXAMPLE VALUES - REPLACE WITH YOUR ACTUAL VALUES
# =============================================================================
# These are placeholder values - make sure to update them!
EXAMPLE_SETTING=change_this_value
PLACEHOLDER_PASSWORD=replace_with_real_password